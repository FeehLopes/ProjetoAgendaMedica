<Window x:Class="WpfApplication1.Views.CadastroLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1.Views"
        mc:Ignorable="d"
        Title="CadastroLogin" Height="528.947" Width="542.763">
    <Grid Margin="0,0,25,0">
        <PasswordBox x:Name="pwdSenha" HorizontalAlignment="Left" Margin="86,199,0,0" VerticalAlignment="Top" Height="37" Width="306" Visibility="Visible" SelectionBrush="#FF1B7DE0" Background="#FF00FFD7" RenderTransformOrigin="0.486,-0.124"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="39" Margin="86,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" FontFamily="Arial" Visibility="Visible" CaretBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Foreground="Black" OpacityMask="{DynamicResource {x:Static SystemColors.InactiveCaptionTextBrushKey}}" Background="#FF00D7FF" FontSize="32"/>
        <Label x:Name="lblUsuario" Content="  Usuário" HorizontalAlignment="Left" Margin="86,23,0,0" VerticalAlignment="Top" Width="306" FontSize="48" FontFamily="Arial Black" FontStyle="Italic" Background="{x:Null}" BorderBrush="#FF00FFB4" Foreground="#FF2800FF"/>
        <Label x:Name="lblSenha" Content="   Senha" HorizontalAlignment="Left" Margin="86,137,0,0" VerticalAlignment="Top" Width="306" Height="57" FontSize="36" FontFamily="Arial Black" BorderBrush="#FFF0F0F0" Foreground="#FF0600FF"/>
        <Label x:Name="lblSenhaConf" Content="Confirmar Senha" HorizontalAlignment="Left" Margin="86,236,0,0" VerticalAlignment="Top" Width="414" Height="57" FontSize="36" FontFamily="Arial Black" BorderBrush="#FFF0F0F0" Foreground="#FF0600FF"/>
        <PasswordBox x:Name="pwdSenhaConf" HorizontalAlignment="Left" Margin="86,298,0,0" VerticalAlignment="Top" Height="37" Width="306" Visibility="Visible" SelectionBrush="#FF1B7DE0" Background="#FF00FFD7" RenderTransformOrigin="0.486,-0.124"/>
        <Button x:Name="btnCad" Content="Cadastrar" HorizontalAlignment="Left" Margin="153,377,0,0" VerticalAlignment="Top" Width="167" Height="52" FontFamily="Arial Black" FontSize="24" Click="btnCadastrar_Click"/>

    </Grid>
</Window>
